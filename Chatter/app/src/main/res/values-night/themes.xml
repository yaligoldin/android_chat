<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Chatter" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/prime_dark</item>
        <item name="android:statusBarColor" tools:targetAPI="l">@color/black</item>
    </style>

    <style name="CHAT_BACKGROUND">
        <item name="android:background">#000103</item>
    </style>

    <style name="CHAT_DETAILS">
        <item name="android:background">#00014C</item>
    </style>

    <style name="INPUT_FIELD">
        <item name="android:background">@drawable/background_input_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@drawable/background_button_dark</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="IMAGE_INPUT">
        <item name="android:background">@drawable/background_image_dark</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SETTINGS_BACKGROUND">
        <item name="android:background">@drawable/background_content_settings_dark</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MAIN_BACKGROUND">
        <item name="android:background">@drawable/background_content_bottom_dark</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="BACKGROUND_WIDGET">
        <item name="android:backgroundTint">#2B270D</item>
    </style>

    <style name="TOP_CHAT">
        <item name="android:background">#191000</item>
    </style>

    <style name="TOP_ICON">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="CHAT_BODY">
        <item name="android:background">@drawable/background_content_top_dark</item>
    </style>


</resources>